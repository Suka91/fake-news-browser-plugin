{
    "name": "Check Site Validity",
    "version": "1.0",
    "manifest_version": 2,

    "icons": {
        "38": "neutral.png"
    },
    "background": {
        "scripts": ["jquery.min.js", "background.js"],
	"persistent" : true
    },

    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js": ["ContentScript.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
    },

    "permissions": [
        "*://*/*", "http://*/*", "https://*/*"
    ]
}
